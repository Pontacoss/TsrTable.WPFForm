<UserControl x:Class="TsrTable.UserControls.TsrSubTitleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsrTable.UserControls"
             mc:Ignorable="d" 
       Height="150" Width="400" IsTabStop="False">

    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Cancel"  Width="120" Height="35"  Click="DeleteButton_Click" Margin="5" IsTabStop="False"/>
            <Button Content="OK"  Width="120" Height="35" Click="Button_Click" Margin="5" TabIndex="1"/>
        </StackPanel>
        <TextBox x:Name="SubTitleText" TabIndex="0" 
           InputMethod.PreferredImeState="On" 
               InputMethod.PreferredImeConversionMode="FullShape,Native"
           AcceptsReturn="False"
           TextWrapping="Wrap" 
           DockPanel.Dock="Top"
           Margin="5"/>
    </DockPanel>
</UserControl>
