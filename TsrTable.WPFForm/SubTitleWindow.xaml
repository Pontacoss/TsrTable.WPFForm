<Window x:Class="TsrTable.WPFForm.SubTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsrTable.WPFForm"
        mc:Ignorable="d"
        Title="SubTitleWindow" Height="150" Width="400">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="削除"  Width="120" Height="35"  Click="DeleteButton_Click" Margin="5"/>
            <Button Content="追記"  Width="120" Height="35" Click="Button_Click" Margin="5" />
        </StackPanel>
        <TextBox x:Name="SubTitleText"
             AcceptsReturn="True"
             TextWrapping="Wrap" 
             DockPanel.Dock="Top"
             Margin="5"/>
    </DockPanel>
</Window>
