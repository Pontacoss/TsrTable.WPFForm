<Window x:Class="TsrTable.WPFForm.PostScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsrTable.WPFForm"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PostScriptWindow" Height="150" Width="400">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
                <Button Content="削除"  Width="120"   Click="DeleteButton_Click" Margin="5"/>
            <Button Content="追記"  Width="120" Click="Button_Click" Margin="5"/>
        </StackPanel>
        <TextBox Name="PostScriptText" 
                 AcceptsReturn="True"
                 TextWrapping="Wrap" 
                 DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
